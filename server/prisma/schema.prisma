// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  login String @id
  password String
  name String
}
model Task {
  id Int @id @default(autoincrement())
  title String 
  description String
  postedBy String
  completed Boolean @default(false)
  createdAt DateTime @default(now())
  endAt DateTime
  completedAt DateTime?
  taskType TaskType
  priority Priority
}

enum Priority {
  NONE
  MEDIUM
  URGENCY
}

enum TaskType {
  REUNION
  VISIT
  PROJECT
}